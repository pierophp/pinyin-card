generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model EFMigrationsHistory {
  MigrationId    String @id @db.VarChar(95)
  ProductVersion String @db.VarChar(32)

  @@map("__EFMigrationsHistory")
}

model Card {
  id          Int       @id @default(autoincrement())
  name_en     String?   @db.VarChar(255)
  name_pt     String?   @db.VarChar(255)
  name_cht    String?   @db.VarChar(255)
  name_chs    String?   @db.VarChar(255)
  image       String?   @db.LongText
  category_id Int
  created_at  DateTime? @db.DateTime(6)
  updated_at  DateTime? @db.DateTime(6)
  pinyin      String?   @db.VarChar(255)
  audio_ch    String?   @db.VarChar(255)
  audio_en    String?   @db.VarChar(255)
  audio_pt    String?   @db.VarChar(255)
  audio_fr    String?   @db.VarChar(255)
  audio_it    String?   @db.VarChar(255)
  name_fr     String?   @db.VarChar(255)
  name_it     String?   @db.VarChar(255)
  extra_ch    Json?
  extra_en    Json?
  extra_fr    Json?
  extra_it    Json?
  extra_pt    Json?
  audio_de    String?   @db.VarChar(255)
  extra_de    Json?
  name_de     String?   @db.VarChar(255)
  category    Category  @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_card_category_category_id")

  @@index([category_id], map: "IX_card_category_id")
}

model Category {
  id                 Int        @id @default(autoincrement())
  name_en            String?    @db.VarChar(255)
  name_pt            String?    @db.VarChar(255)
  name_cht           String?    @db.VarChar(255)
  name_chs           String?    @db.VarChar(255)
  created_at         DateTime?  @db.DateTime(6)
  updated_at         DateTime?  @db.DateTime(6)
  name_fr            String?    @db.VarChar(255)
  name_it            String?    @db.VarChar(255)
  parent_category_id Int?
  name_de            String?    @db.VarChar(255)
  card               Card[]
  category           Category?  @relation("categoryTocategory", fields: [parent_category_id], references: [id], onDelete: Restrict, onUpdate: NoAction, map: "FK_category_category_parent_category_id")
  other_category     Category[] @relation("categoryTocategory")

  @@index([parent_category_id], map: "IX_category_parent_category_id")
}
